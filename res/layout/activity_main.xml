<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg">

    <Spinner
        android:id="@+id/spinnerQuantity"
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="653dp"
        android:layout_marginEnd="215dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="182dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="212dp"
        android:layout_marginTop="647dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="0dp"
        android:text="Order"
        android:textColor="@android:color/white" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="389dp"
        android:layout_height="581dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="6dp"
        android:alignmentMode="alignMargins"
        android:background="#B7000000"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        tools:ignore="UselessParent">



        <!-- Checkbox and Image for Topping 1 -->

        <CheckBox
            android:id="@+id/checkbox_topping1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="Cheese" />

        <ImageView
            android:id="@+id/image_topping1"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/a" />

        <!-- Checkbox and Image for Topping 2 -->
        <CheckBox
            android:id="@+id/checkbox_topping2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="Olives" />

        <ImageView
            android:id="@+id/image_topping2"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/c" />

        <!-- Checkbox and Image for Topping 3 -->
        <CheckBox
            android:id="@+id/checkbox_topping3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="Tomato" />

        <ImageView
            android:id="@+id/image_topping3"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/b" />

        <!-- Checkbox and Image for Topping 4 -->
        <CheckBox
            android:id="@+id/checkbox_topping4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="Onion" />

        <ImageView
            android:id="@+id/image_topping4"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/d" />

        <!-- Checkbox and Image for Topping 5 -->
        <CheckBox
            android:id="@+id/checkbox_topping5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="Pineapple" />

        <ImageView
            android:id="@+id/image_topping5"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/e" />

        <!-- Checkbox and Image for Topping 6 -->

    </GridLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="50dp"
        app:srcCompat="@drawable/rina" />

</RelativeLayout>
